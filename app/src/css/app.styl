simple_transition()
    -webkit-transition all 0.3s ease-in-out
    -moz-transition all 0.3s ease-in-out
    -o-transition all 0.3s ease
    transition all 0.3s ease-in-out

body, html {
    height: 100%
}

html {
    overflow-y: scroll;
}

body, pre {
    background: url('../images/bg.png');
}

.wrapper {
    margin: 20px auto;
    padding-top: 10px;
    width: 80%;
    max-width: 1080px;
}

#app {
    height: 100%;
}

/* navigation bar styles */
.navbar {
    border-radius: 0;
}
.navbar-brand {
    padding-left: 45px;
}
.navbar .navbar-logo {
    position: absolute;
    top: 10px;
    left: 5px;
    background: url("../images/logo.svg");
    height: 30px;
    width: 30px;
}
.navbar a {
    outline: none;
}

/* tab content styles */
.content {
    padding-left: 10px;
}
.content h2 {
    margin-top: 0;
}

/* message styles */
.message {
	margin: 10px 0 10px 0;
}
.message-header {
    border-radius: 2px 2px 0 0;
    box-shadow: none;
    margin-bottom: -1px;
    overflow: hidden;
    padding: 10px 0;
}
.message-channel {
    font-size: 20px;
}
.message-time {
    font-size: 10px;
    margin-left: 10px;
}

.right {
    text-align: right !important;
}
.center {
    text-align: center !important;
}
.hidden {
    display: none;
}

.string { color: #6B6B6B; }
.number { color: darkorange; }
.boolean { color: #5567ff; }
.null { color: #ff5d58; }
.key { color: #1F76B5; }

/* sidebar styles */
.sidebar {
    margin-bottom: 20px;
}
.nav-pills > li > a.active {
    outline: none;
}
.nav-pills > li > a {
    padding: 5px;
}
.nav-pills > li > ul > li > a {
    padding-left: 18px;
}
.nav > li > a:hover, .nav > li > a:focus {
    background: #DFDFDF;
}
.nav-pills li {
    margin-top: 2px;
}

/* info key-value style */
.stat-row {
    margin-bottom: 20px;
}
.stat-key {
    font-size: 18px;
}
.stat-value {
    font-size: 18px;
}

/* actions styles */

#data-editor {
    height: 200px;
}
.action-response {
    margin-top: 20px;
}
.box {
    border-color: rgba(0, 0, 0, 0.3);
    border-style: solid;
    border-width: 1px;
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2) inset;
    color: rgba(0, 0, 0, 0.8);
    border-radius: 4px 4px 4px 4px;
    display: inline-block;
    font-size: 14px;
    font-weight: normal;
    margin-bottom: 0;
    padding: 6px 12px;
    text-align: center;
    vertical-align: middle;
    white-space: nowrap;
    margin-left: 10px;
}
.box-error {
    background: none repeat scroll 0 0 #CC8888;
}
.box-success {
    background: none repeat scroll 0 0 #88CC88;
}

/* table styles */
.table-credentials th {
    width: 150px;
}

/* login screen styles */
.login {
    background: url("../images/login-bg.jpg") no-repeat scroll center bottom / cover #000;
    background-color: #000;
    color: #f5f5f5;
    display: table;
    height: 100%;
    padding: 0;
    text-align: center;
    width: 100%;
}
.login .login-body {
    display: table-cell;
    vertical-align: middle;
}
.login .login-logo {
    background: url("../images/logo-login.svg");
    height: 110px;
    width: 110px;
    margin: 0 auto;
}
.login .login-heading {
    font-size: 40px;
    margin-top: 0;
}
.login .login-forkme {
    position: absolute;
    top: 0;
    right: 0;
    border: 0;
}
.login .login-body .login-text {
    font-size: 18px;
}
.login-form {
    max-width: 300px;
    margin: 0 auto;
}
.login-submit {
    background-color: #EB7260;
    border-color: #862516;
    text-transform: uppercase;
}
.login-submit:hover, .login-submit:focus, .login-submit:active {
    background-color: #d06554;
    border-color: #862516;
}
@media (min-width: 767px) {
    .login {
        height: 100%;
        padding: 0;
    }
    .login .login-body .login-heading {
        font-size: 80px;
    }
    .login .login-body .login-text {
        font-size: 25px;
    }
}
.secret-hidden {
    color: #949494;
}
.content-help{
    color: #949494;
}